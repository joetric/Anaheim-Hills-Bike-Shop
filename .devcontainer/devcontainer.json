{
	"name": "PHP + Apache Dev Container for old bike shop website",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/php:1-8.2-apache-bullseye",
	"workspaceMount": "source=${localWorkspaceFolder},target=/var/www/html,type=bind,consistency=cached",
	"workspaceFolder": "/var/www/html",

